@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Index</h2>
@if (!Model.Any())
{
    <p>There's no movie yet</p>
}
else
{
    <ul>
        @foreach (var movie in Model)
        {
            <li>@Html.ActionLink(@movie.Name, "Details", new { id = movie.Id }, null)</li>
        }
    </ul>
}

